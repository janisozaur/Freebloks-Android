<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp"
    android:paddingTop="6dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginBottom="2dp"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/menu_app_icon_size"
            android:layout_height="@dimen/menu_app_icon_size"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:src="@drawable/appicon_small" />

        <TextView
            android:id="@+id/textView1"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="2dp"
            android:text="@string/app_name"
            style="@style/TextAppearance.Medium" />

        <Button
            android:id="@+id/star"
            style="?android:attr/buttonStyleSmall"
            android:drawableLeft="@drawable/star"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <ToggleButton
            android:id="@+id/sound_toggle_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/main_menu_button_height"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:checked="true"
            android:drawableLeft="@android:drawable/ic_lock_silent_mode_off"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp" >
		<Button
		    android:id="@+id/new_game"
		    android:layout_width="0dp"
		    android:layout_height="@dimen/main_menu_button_height"
		    android:layout_weight="1"
		    android:text="@string/new_local_game"
            android:textSize="@dimen/textSizeMedium" />
		    
		<ImageButton
		    android:id="@+id/new_game_custom"
		    android:layout_width="@dimen/main_menu_button_height"
		    android:layout_height="@dimen/main_menu_button_height"
		    android:layout_weight="0"
		    android:layout_marginLeft="2dp"
		    style="?android:attr/buttonStyle"
		    android:src="@drawable/gears" />

	</LinearLayout>
    <Button
        android:id="@+id/resume_game"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_button_height"
        android:layout_marginBottom="2dp"
        android:minWidth="@dimen/main_menu_width"
        android:text="@string/resume"
        android:textSize="@dimen/textSizeMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp" >
        
	    <Button
	        android:id="@+id/host_game"
	        android:layout_width="0dp"
	        android:layout_height="@dimen/main_menu_button_height"
	        android:layout_weight="0.5"
	        android:text="@string/host_game"
            android:textSize="@dimen/textSizeMedium" />
	    <Button
	        android:id="@+id/join_game"
	        android:layout_width="0dp"
	        android:layout_height="@dimen/main_menu_button_height"
	        android:layout_weight="0.5"
	        android:layout_marginLeft="2dp"
	        android:text="@string/join_game"
            android:textSize="@dimen/textSizeMedium" />
	</LinearLayout>

	<Button
        android:id="@+id/preferences"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_button_height"
        android:layout_marginBottom="2dp"
        android:text="@string/preferences"
        android:textSize="@dimen/textSizeMedium" />

</LinearLayout>